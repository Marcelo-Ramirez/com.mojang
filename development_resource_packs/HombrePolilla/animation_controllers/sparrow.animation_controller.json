{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.sparrow": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"fly": "query.variant==1"
						},
						{
							"forage": "query.variant==2"
						}
					]
				},
				"fly": {
					"animations": [
						"flap"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					],
					"blend_transition": 0.3
				},
				"forage": {
					"animations": [
						"forage"
					],
					"transitions": [
						{
							"default": "query.variant==0"
						},
						{
							"fly": "query.variant==1"
						}
					],
					"blend_transition": 0.3
				}
			}
		},
		"controller.animation.sparrow.jump": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"jump": "!query.is_on_ground"
						}
					],
					"blend_transition": 0.2
				},
				"jump": {
					"animations": [
						"jump"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}