{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.fly_controller": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"flying": "!query.is_on_ground && !query.has_target"
						}
					]
				},
				"flying": {
					"on_entry": [
						"/event entity @s ymi:random_flight_time",
						"/event entity @s ymi:switch_to_flying",
						"/effect @s slow_falling 300 2 true",
						"/effect @s speed 20000 1 true"
					],
					"on_exit": [
						"/effect @s clear",
						"/event entity @s ymi:switch_to_walking"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					]
				}
			}
		}
	}
}